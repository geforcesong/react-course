{
  "name": "react-course",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "postinstall": "npm run prepare",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test:tslint": "tsc --noemit",
    "prepare": "husky install",
    "db_init": "cp ./src/data/db.json.bak ./src/data/db.json",
    "serve_db": "json-server --watch ./src/data/db.json --port 3080"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.6",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-icons": "^4.4.0",
    "react-query": "^3.39.2",
    "react-redux": "^8.0.4",
    "react-router-dom": "^6.3.0",
    "sass": "^1.52.3",
    "zustand": "^4.0.0-rc.1"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "@vitejs/plugin-react": "^1.3.0",
    "autoprefixer": "^10.4.7",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-json-files": "^1.3.0",
    "eslint-plugin-react": "^7.30.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.1.2",
    "typescript": "^4.6.3",
    "vite": "^2.9.9"
  },
  "lint-staged": {
    "*.(ts|tsx)": "npx eslint --cache --fix",
    "*.{ts,scss,tsx,html}": "npx prettier --write"
  }
}
